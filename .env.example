# =============================================================================
# Copenhagen Event Recommender - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=data/events/events.duckdb
# For production (Supabase/PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# -----------------------------------------------------------------------------
# API SERVER
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# -----------------------------------------------------------------------------
# EVENT DATA SOURCES - API KEYS
# -----------------------------------------------------------------------------
# Eventbrite (https://www.eventbrite.com/platform/api)
# Required for: Music, Nightlife, Tech events
EVENTBRITE_API_TOKEN=

# Meetup (https://www.meetup.com/api/)
# Required for: Tech meetups, Social events
MEETUP_API_KEY=

# TicketMaster (https://developer.ticketmaster.com)
# Required for: Concerts, Sports events
TICKETMASTER_API_KEY=

# Songkick (https://www.songkick.com/developer)
# Optional: Concert/tour data
SONGKICK_API_KEY=

# -----------------------------------------------------------------------------
# ENRICHMENT APIS (Optional)
# -----------------------------------------------------------------------------
# Spotify - Artist metadata and genres
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Last.fm - Additional genre data
LASTFM_API_KEY=

# -----------------------------------------------------------------------------
# ML CONFIGURATION
# -----------------------------------------------------------------------------
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
H3_RESOLUTION=8

# -----------------------------------------------------------------------------
# SCRAPING CONFIGURATION
# -----------------------------------------------------------------------------
SCRAPING_ENABLED=true
SCRAPING_SCHEDULE_CRON=0 6 * * *
MAX_EVENTS_PER_SOURCE=500

# Copenhagen center coordinates
COPENHAGEN_CENTER_LAT=55.6761
COPENHAGEN_CENTER_LON=12.5683
COPENHAGEN_RADIUS_KM=25

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# PRODUCTION (Railway auto-sets these)
# -----------------------------------------------------------------------------
# PORT=8000
# RAILWAY_ENVIRONMENT=production
