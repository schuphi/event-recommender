# API Keys for Data Collection
EVENTBRITE_API_TOKEN=your_eventbrite_oauth_token_here
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
LASTFM_API_KEY=your_lastfm_api_key

# Instagram Scraping (Optional - increases rate limits)
INSTAGRAM_USERNAME=your_username
INSTAGRAM_PASSWORD=your_password

# Database Configuration
DATABASE_URL=data/events/events.duckdb

# ML Model Configuration
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
H3_RESOLUTION=8

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Production Railway Settings (automatically set by Railway)
# PORT=8000
# RAILWAY_ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Scheduling
SCRAPING_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM
MODEL_RETRAIN_SCHEDULE_CRON=0 3 * * 0  # Weekly on Sunday at 3 AM